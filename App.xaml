<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Qatalyst.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default WinUI Controls Resources -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Resources/ThemeResources.xaml" />

                <!-- Reference to custom Resource Dictionaries -->
                <ResourceDictionary Source="/Resources/Colors.xaml" />

                <!-- Reference the HostRecordTreeViewNodeStyles.xaml file -->
                <ResourceDictionary Source="/Resources/HostRecordTreeViewNodeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Reference to Segoe Fluent Icons -->
            <FontFamily x:Key="FluentIconsFont">ms-appx:///Assets/Fonts/SegoeFluentIcons.ttf#Segoe Fluent Icons</FontFamily>

            <!-- Define the default font family -->
            <FontFamily x:Key="DefaultFontFamily">ms-appx:///Assets/Fonts/Assets/JetBrainsMono.ttf#JetBrains Mono</FontFamily>

        </ResourceDictionary>
    </Application.Resources>
</Application>