<Page
    x:Class="InLoVe.Pages.LogMonitoringPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="MainGrid" Margin="10, 10, 10, 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Log Monitoring" FontSize="24" Margin="10" Grid.Row="0" />

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Device selection and start/stop toggle -->
            <ComboBox x:Name="DeviceComboBox"
                      Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      Margin="5"
                      PlaceholderText="Select Device"
                      ItemsSource="{Binding Devices}"
                      SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
                      SelectionChanged="DeviceComboBox_OnSelectionChanged"/>
            <Button Grid.Column="1" Margin="5" Click="ShowPackages_Click">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Filter"/>
                    <TextBlock Text="Filter" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <ToggleButton Grid.Column="2" x:Name="StartStopToggleButton" Margin="5" Foreground="White"
                          Checked="StartStopToggleButton_Checked" Unchecked="StartStopToggleButton_Unchecked">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon x:Name="StartStopIcon" Symbol="Play"/>
                    <TextBlock x:Name="StartStopText" Text="Start" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </ToggleButton>
        </Grid>

        <ScrollViewer x:Name="LogScrollViewer"
                      Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <RichTextBlock x:Name="LogTextBlock" FontFamily="Consolas" FontSize="12" IsTextSelectionEnabled="True">
                <Paragraph>
                    <Run Text="" />
                </Paragraph>
            </RichTextBlock>
        </ScrollViewer>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5, 10, 5, 5" Grid.Column="0">
                <TextBlock x:Name="MemoryUsageTextBlock"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"
                           Text="Memory Usage: (0 / 0)" />
                <ProgressBar x:Name="MemoryBar"
                             Height="20"
                             Value="0"
                             HorizontalAlignment="Stretch" />
            </StackPanel>
            <ToggleButton x:Name="AutoScrollToggleButton"
                          Content="Auto-scroll"
                          IsChecked="True"
                          Margin="5, 10, 5, 5"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"
                          Grid.Column="1" />
        </Grid>

        <!-- <StackPanel Grid.Row="3" -->
        <!--             Orientation="Horizontal" -->
        <!--             VerticalAlignment="Center" -->
        <!--             HorizontalAlignment="Right"> -->
        <!--     <ToggleButton x:Name="AutoScrollToggleButton" Content="Auto-scroll" IsChecked="True" Margin="5, 10, 5, 5"/> -->
        <!-- </StackPanel> -->
    </Grid>
</Page>
