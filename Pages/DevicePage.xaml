<Page
    x:Class="Qatalyst.Pages.DevicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objects="using:Qatalyst.Objects"
    xmlns:qatalyst="using:Qatalyst"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- DataTemplate for LogEntry -->
        <DataTemplate x:Key="LogEntryTemplate">
            <TextBlock
                FontFamily="{StaticResource DefaultFontFamily}"
                FontSize="15"
                Text="{Binding}"
                Foreground="#FFF0F0F0"
                TextWrapping="Wrap"
                IsTextSelectionEnabled="True"
                Margin="5,0,15,0" />
        </DataTemplate>

        <!-- DataTemplate for DeviceInfo -->
        <DataTemplate x:Key="DeviceInfoTemplate" x:DataType="objects:DeviceInfo">
            <Grid AutomationProperties.Name="{x:Bind Model}" Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Source="{x:Bind ImageLocation}"
                       Height= "100"
                       Margin="8"
                       Stretch="Uniform"
                       VerticalAlignment="Top" />
                <StackPanel Grid.Column="1" Margin="8" VerticalAlignment="Center">
                    <TextBlock FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="16"
                               Text="{x:Bind SerialNumber}"
                               Margin="0,0,0,8" />
                    <TextBlock FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="13"
                               Text="{x:Bind Model}"
                               Margin="0,0,0,8" />
                    <TextBlock FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="12"
                               Text="{x:Bind Manufacturer}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Compact ListViewItem Style -->
        <Style TargetType="ListViewItem" x:Key="CustomListViewItemStyle">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="MinHeight" Value="0" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="0">
                            <ContentPresenter
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock
            Grid.Row="0"
            FontSize="24"
            Margin="10"
            Text="Device Information" />

        <Grid Grid.Row="1" x:Name="ContentGrid" Margin="10" Padding="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GridView Grid.Column="0"
                      Grid.Row="0"
                      x:Name="DeviceGridView"
                      FontFamily="{StaticResource DefaultFontFamily}"
                      FontSize="16"
                      Header="Available Devices"
                      Margin="10"
                      ItemsSource="{x:Bind DeviceList}"
                      ItemTemplate="{StaticResource DeviceInfoTemplate}"
                      IsItemClickEnabled="True"
                      CanDragItems="False"
                      AllowDrop="False"
                      CanReorderItems="False"
                      SelectionMode="Single"
                      FlowDirection="LeftToRight"
                      SelectionChanged="DeviceGridView_OnSelectionChanged"/>

            <!-- Reload Button -->
            <Button
                Grid.Column="0"
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <FontIcon FontFamily="{StaticResource FluentIconsFont}"
                              FontSize="18"
                              Glyph="&#xE72C;" />
                    <TextBlock
                        Text="Reload Devices"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <ListView Grid.Column="1"
                      Grid.Row="0"
                      x:Name="ConsoleHistoryListView"
                      Margin="10, 10, 10, 0"
                      ItemTemplate="{StaticResource LogEntryTemplate}"
                      ItemsSource="{x:Bind DeviceConsoleHistory, Mode=OneWay}"
                      ItemContainerStyle="{StaticResource CustomListViewItemStyle}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      VerticalContentAlignment="Bottom">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Margin="5, 10, 5, 10" Orientation="Vertical" VerticalAlignment="Bottom" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid Grid.Column="1"
                  Grid.Row="1"
                  x:Name="ConsoleControlGrid"
                  Margin="10, 0, 10, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <CommandBar Background="#323135" IsOpen="False" DefaultLabelPosition="Right">
                    <AppBarButton Label="Input Text"
                                  Tag="0"
                                  Click="CommandButton_OnClick">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8E9;" />
                        </AppBarButton.Icon>
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="T" Modifiers="Control"/>
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <AppBarButton Icon="Camera"
                                  Label="Take Screenshot"
                                  Tag="1"
                                  Click="CommandButton_OnClick">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="C" Modifiers="Control"/>
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton Icon="Setting" Label="Settings">
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="I" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>

                <AutoSuggestBox x:Name="DeviceCommandInputBox"
                                Grid.Column="1"
                                FontFamily="{StaticResource DefaultFontFamily}"
                                FontSize="13"
                                QueryIcon="Send"
                                CornerRadius="0"
                                Margin="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                PlaceholderText="Enter command text (e.g. adb shell input text &quot;input_text&quot;)"
                                QuerySubmitted="DeviceCommandInputBox_OnQuerySubmitted"/>
            </Grid>
        </Grid>
    </Grid>
</Page>